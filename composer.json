{
    "name": "citrus-framework/variables",
    "description": "php variable library",
    "keywords": ["citrus", "php", "library", "variables"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "take64",
            "email": "take64@citrus.tk"
        }
    ],
    "require": {
        "citrus-framework/collection": "^1.0",
        "citrus-framework/exception": "^1.0",
        "ext-dom": "*"
    },
    "require-dev": {
        "php": "^8.1",
        "phpunit/phpunit": "^9.5",
        "nunomaduro/phpinsights": "^v2.0"
    },
    "autoload": {
        "psr-4": {
            "Citrus\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
